<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="#F7F2F3"
        android:text="  City"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <EditText
        android:id="@+id/timeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="15dp"
        android:text="15:00"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:ems="8"
        android:inputType="time"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dateEditText"/>

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp"
        android:text="1.11.19"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:ems="8"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="392dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/editText1"
            android:layout_width="58dp"
            android:layout_height="70dp"
            android:inputType="numberSigned"
            android:text="MON"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/editText2"
            android:layout_width="58dp"
            android:layout_height="70dp"
            android:inputType="numberSigned"
            android:text="TUE"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/editText3"
            android:layout_width="58dp"
            android:layout_height="70dp"
            android:inputType="numberSigned"
            android:text="WED"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/editText4"
            android:layout_width="58dp"
            android:layout_height="70dp"
            android:inputType="numberSigned"
            android:text="THU"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/editText5"
            android:layout_width="58dp"
            android:layout_height="70dp"
            android:inputType="numberSigned"
            android:text="FRI"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/editText6"
            android:layout_width="58dp"
            android:layout_height="70dp"
            android:inputType="numberSigned"
            android:text="SAT"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/editText7"
            android:layout_width="58dp"
            android:layout_height="70dp"
            android:inputType="numberSigned"
            android:text="SUN"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="405dp"
        android:layout_height="77dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.005">

        <ImageView
            android:id="@+id/monImageView"
            android:layout_width="58dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/cloud_24dp" />

        <ImageView
            android:id="@+id/tueImageView"
            android:layout_width="58dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/cloud_24dp" />

        <ImageView
            android:id="@+id/wedImageView"
            android:layout_width="58dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/flash_24dp" />

        <ImageView
            android:id="@+id/thuImageView"
            android:layout_width="58dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/cloud_24dp" />

        <ImageView
            android:id="@+id/fryImageView"
            android:layout_width="58dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/sun_24dp" />

        <ImageView
            android:id="@+id/satImageView"
            android:layout_width="58dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/flash_24dp" />

        <ImageView
            android:id="@+id/sunImageView"
            android:layout_width="58dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/umbrella_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="366dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/monTextView2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="numberSigned"
            android:text="Monday"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tueTextView2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="numberSigned"
            android:text="Tuesday"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/wedTextView2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="numberSigned"
            android:text="Wednesday"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/thuTextView2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="numberSigned"
            android:text="Thursday"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/friTextView2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="numberSigned"
            android:text="Friday"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/satTextView2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="numberSigned"
            android:text="Saturday"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/sunTextView2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="numberSigned"
            android:text="Sunday"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>